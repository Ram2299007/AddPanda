<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Screens.choosePersonalBusiness">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/icon_tints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="96dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:lineHeight="22.5dp"
            android:text="Select an option which is suitable to you"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"

            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:lineHeight="22.5dp"
            android:text="for starting your Advertising journey"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="15dp" />
        
        <ImageView
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center"
            android:layout_marginTop="44.7dp"
            android:layout_marginBottom="18dp"
            android:src="@drawable/group2"/>

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@drawable/button_color_hover_for_all"
            android:gravity="center"
            android:inputType="phone"
            android:textFontWeight="500"
            android:lineHeight="27dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="29dp"
            android:text="Personal"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center"

            android:layout_marginBottom="17dp"
            android:src="@drawable/groupbisines"/>

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/business"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:background="@drawable/button_color_hover_for_all"
            android:gravity="center"
            android:inputType="phone"
            android:textFontWeight="500"
            android:lineHeight="27dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="34dp"
            android:text="Business"
            android:textColor="@color/white"
            android:textSize="18dp" />




    </LinearLayout>

</RelativeLayout>