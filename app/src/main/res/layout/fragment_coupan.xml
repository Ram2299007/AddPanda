<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.PaymentFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19.91dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/icon_tints" />

                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="Apply Coupon"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:gravity="end"
                        android:orientation="horizontal">


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dotted_bg"
                        android:orientation="horizontal">


                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins"
                            android:hint="Enter Coupon Code"
                            android:lineHeight="19.5dp"
                            android:inputType="text"
                            android:paddingStart="17dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textFontWeight="300"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/check"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="15.22dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="end"
                            android:lineHeight="19.5dp"
                            android:text="CHECK"
                            android:textColor="@color/appOrangeTheme"
                            android:textFontWeight="400" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginTop="21dp"
                    android:background="#D9D9D9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="27dp"
                        android:fontFamily="@font/poppins"
                        android:lineHeight="19.5dp"
                        android:text="Coupons"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">


                        <CheckBox
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            tools:ignore="TouchTargetSizeCheck" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="107dp"
                                android:layout_height="38dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/dotted_background_rect_bg"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="19.5dp"
                                    android:text="ADPND2022"
                                    android:textColor="@color/white"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/poppins"
                                android:lineHeight="18dp"
                                android:text="Save Rs.10 on minimum purchase of Rs.499"
                                android:textColor="@color/white"
                                android:textFontWeight="400" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/dotted_line_to_view" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">


                        <CheckBox
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            tools:ignore="TouchTargetSizeCheck" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="107dp"
                                android:layout_height="38dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/dotted_background_rect_bg"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="19.5dp"
                                    android:text="ADPND2022"
                                    android:textColor="@color/white"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/poppins"
                                android:lineHeight="18dp"
                                android:text="Save Rs.10 on minimum purchase of Rs.499"
                                android:textColor="@color/white"
                                android:textFontWeight="400" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/dotted_line_to_view" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">


                        <CheckBox
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            tools:ignore="TouchTargetSizeCheck" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="107dp"
                                android:layout_height="38dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/dotted_background_rect_bg"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="19.5dp"
                                    android:text="ADPND2022"
                                    android:textColor="@color/white"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/poppins"
                                android:lineHeight="18dp"
                                android:text="Save Rs.10 on minimum purchase of Rs.499"
                                android:textColor="@color/white"
                                android:textFontWeight="400" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/dotted_line_to_view" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">


                        <CheckBox
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            tools:ignore="TouchTargetSizeCheck" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="107dp"
                                android:layout_height="38dp"
                                android:layout_gravity="start"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/dotted_background_rect_bg"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="19.5dp"
                                    android:text="ADPND2022"
                                    android:textColor="@color/white"
                                    android:textFontWeight="400"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:layout_marginTop="7dp"
                                android:fontFamily="@font/poppins"
                                android:lineHeight="18dp"
                                android:text="Save Rs.10 on minimum purchase of Rs.499"
                                android:textColor="@color/white"
                                android:textFontWeight="400" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/dotted_line_to_view" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>