<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.mainFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/CoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="80dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"

                            android:layout_marginStart="16dp"
                            android:layout_marginTop="19.91dp"
                            android:orientation="horizontal">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/mainImageview"

                                android:layout_width="41dp"
                                android:layout_height="41dp"
                                android:layout_gravity="center"
                                android:src="@drawable/profilelogo" />

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="11dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="22.5dp"
                                android:text="Adpanda"
                                android:textColor="@color/white"
                                android:textFontWeight="500"
                                android:textSize="15sp"
                                android:visibility="visible" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="30dp"
                                android:orientation="horizontal">

                                <AutoCompleteTextView
                                    android:id="@+id/searchEdts"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/poppins_medium"
                                    android:hint="Search category here"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/shimmer_coloe"
                                    android:textSize="13sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/search"
                                        android:layout_width="17.6dp"
                                        android:layout_height="18dp"


                                        android:layout_gravity="center"
                                        android:layout_marginEnd="13.4dp"
                                        android:src="@drawable/search"
                                        app:tint="@color/icon_tints" />

                                    <ImageView
                                        android:id="@+id/notification"
                                        android:layout_width="16.35dp"
                                        android:layout_height="19dp"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="13.4dp"
                                        android:src="@drawable/notification"
                                        app:tint="@color/icon_tints" />

                                    <ImageView
                                        android:id="@+id/advertise"
                                        android:layout_width="20dp"
                                        android:layout_height="16dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ad"
                                        app:tint="@color/icon_tints" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"

                                android:layout_marginLeft="9dp"

                                android:layout_marginRight="9dp"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/logo"
                                    android:layout_width="110dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="13dp"
                                    android:background="@drawable/button_rounded2_hover_for_all"
                                    android:drawableStart="@drawable/logo"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="15dp"
                                    android:padding="8dp"
                                    android:text="Logo"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="10sp"
                                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/visiitngcard"
                                    android:layout_width="115dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="13dp"
                                    android:background="@drawable/button_rounded2_hover_for_all"
                                    android:drawableStart="@drawable/visitingcard"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="15dp"
                                    android:padding="8dp"
                                    android:text="Visiting card"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="10sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/letterhead"
                                    android:layout_width="110dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button_rounded2_hover_for_all"
                                    android:drawableStart="@drawable/lettertwo"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:lineHeight="15dp"
                                    android:padding="8dp"
                                    android:text="Letter Head"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textFontWeight="500"
                                    android:textSize="10sp"
                                    tools:ignore="TouchTargetSizeCheck" />

                            </LinearLayout>
                        </HorizontalScrollView>


                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewPagerId"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_marginTop="23dp"
                            android:background="@drawable/round_drawable"
                            android:contentDescription="@string/app_name"
                            android:lineHeight="16.5dp" />

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"

                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            app:dotsColor="@color/button_Normal_color"
                            app:dotsSize="5dp"
                            app:dotsWidthFactor="1"
                            app:selectedDotColor="@color/appOrangeTheme" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="13dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/referearn"
                                android:layout_width="155dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="25dp"

                                android:background="@drawable/orangebuttonhovereffect_for_all"


                                android:drawableTop="@drawable/refer"
                                android:fontFamily="@font/poppins_medium"

                                android:gravity="center"

                                android:lineHeight="16.5dp"
                                android:paddingTop="9dp"

                                android:paddingBottom="2dp"
                                android:text="Refer and Earn"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textFontWeight="500"
                                android:textSize="11sp"
                                tools:ignore="TouchTargetSizeCheck" />

                            <androidx.appcompat.widget.AppCompatButton

                                android:id="@+id/partnerwithus"
                                android:layout_width="155dp"
                                android:layout_height="70dp"

                                android:layout_gravity="center"


                                android:background="@drawable/orangebuttonhovereffect_for_all"

                                android:drawableTop="@drawable/partner"
                                android:fontFamily="@font/poppins_medium"

                                android:gravity="center"

                                android:lineHeight="16.5dp"
                                android:paddingTop="6dp"

                                android:paddingBottom="2dp"
                                android:text="Partner With Us"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textFontWeight="500"
                                android:textSize="11sp"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/truebuttonRecyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginTop="16dp"

                            android:orientation="horizontal" />


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/trendingRecyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"

                                >

                            </androidx.recyclerview.widget.RecyclerView>


                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>


            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <RelativeLayout
        android:id="@+id/mainRealte"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/whatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="90dp"
            android:background="#40C351"
            android:backgroundTint="#40C351"
            android:contentDescription="@string/app_name"
            android:src="@drawable/whatsapp_business"
            android:visibility="visible"
            app:fabCustomSize="50dp"
            app:maxImageSize="29dp"
            app:backgroundTint="#40C351"
            app:tint="@android:color/white" />

    </RelativeLayout>


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/main_fragment_shimmer" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>