<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/appThemeColor"
    tools:context=".Screens.BusinessProfile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pic"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="83dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView

                        android:id="@+id/imageViewBusiness"
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:src="@drawable/groupbisines"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginStart="75dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_baseline_add_circle_24"
                        app:tint="#FFFFFF" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="43dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:gravity="center"
                    android:fontFamily="@font/poppins"
                    android:inputType="textPersonName"
                    android:lineHeight="21dp"
                    android:hint="Business Name"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:gravity="center"
                    android:inputType="textWebEditText"
                    android:fontFamily="@font/poppins"
                    android:lineHeight="21dp"
                    android:hint="Enter Website"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:gravity="center"
                    android:inputType="text"
                    android:lineHeight="21dp"
                    android:hint="Business Category"
                    android:fontFamily="@font/poppins"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/dateofincorp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Date Of  Incorporation"

                    android:lineHeight="21dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/businessd"
                    android:layout_width="match_parent"
                    android:layout_height="79dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:gravity="center"
                    android:inputType="text"
                    android:layout_marginBottom="14dp"
                    android:lineHeight="21dp"
                    android:hint="Enter Business Details"
                    android:fontFamily="@font/poppins"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textColor="@color/white"
                    android:textSize="14dp" />




            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/updateId"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginStart="18dp"
                android:layout_marginBottom="90dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/orangebuttonhovereffect_for_all"

                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:inputType="phone"
                android:lineHeight="22.5dp"
                android:text="Update"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="15dp" />

        </LinearLayout>



    </ScrollView>




</RelativeLayout>