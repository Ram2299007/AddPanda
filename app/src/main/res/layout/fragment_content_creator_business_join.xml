<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.contentCreatorPersonalJoinFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19.91dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/icon_tints" />

                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="Brand Developer"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15dp" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="21dp"
                    android:text="Tell us more about you"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Enter Your Name"
                        android:inputType="textPersonName"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Contact Number"
                        android:inputType="phone"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Email ID"
                        android:inputType="textEmailAddress"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/exp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Total Experience"
                        android:inputType="text"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/specialise"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Specialized In"
                        android:inputType="text"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/upload"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/button_color_hover_for_all"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Upload Portfolio"
                        android:inputType="text"
                        android:lineHeight="21dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/whitetograyforbutton"
                        android:textSize="14dp" />

                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/personal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"


                        android:layout_marginTop="19dp"

                        android:layout_marginBottom="80dp"

                        android:background="@drawable/orangebuttonhovereffect_for_all"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:inputType="phone"
                        android:lineHeight="22.5dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>