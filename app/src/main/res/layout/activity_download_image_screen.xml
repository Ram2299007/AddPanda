<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appThemeColor"
    tools:context=".Screens.downloadImageActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19.91dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/icon_tints" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="Download Image"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15sp" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/downloadImg"
                    android:layout_width="match_parent"
                    android:layout_marginTop="109dp"
                    android:background="@drawable/editgrp"
                    android:layout_height="305dp">


                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/download"
                        android:layout_width="153dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lowradius_orangebg"
                        android:drawableStart="@drawable/downloadxml"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:lineHeight="24dp"
                        android:layout_marginEnd="40dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Download"
                        android:drawableTint="@color/white"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/share"
                        android:layout_width="153dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lowradius_orangebg"
                        android:drawableStart="@drawable/sendxml"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:lineHeight="24dp"
                        android:paddingLeft="30dp"
                        android:drawableTint="@color/white"
                        android:paddingRight="30dp"
                        android:text="Share"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>