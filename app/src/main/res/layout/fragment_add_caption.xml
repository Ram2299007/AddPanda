<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.editVisitingCardDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="16dp"
                        android:layout_marginTop="19.91dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/icon_tints" />

                        <TextView
                            android:id="@+id/treding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="11dp"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="22.5dp"
                            android:text="Create Visiting card"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="15dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/editView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="31dp"
                        android:layout_marginRight="17dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/text"
                            android:layout_width="match_parent"
                            android:layout_height="130dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Text"
                            android:inputType="text"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/fb"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Facebook URL"
                            android:inputType="textUri"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/insta"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Insagram URL"
                            android:inputType="textUri"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/linkdn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Linkedin URL"
                            android:inputType="textUri"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Enter Address"
                            android:inputType="textPostalAddress"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/captionEdt"
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Caption"
                            android:inputType="text"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton

                        android:id="@+id/caption"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="17dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/orangebuttonhovereffect_for_all"

                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:inputType="phone"
                        android:lineHeight="24dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="16sp" />


                </LinearLayout>

            </RelativeLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>


</RelativeLayout>