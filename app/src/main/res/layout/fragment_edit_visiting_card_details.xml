<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.editVisitingCardDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="16dp"
                        android:layout_marginTop="19.91dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/icon_tints" />

                        <TextView
                            android:id="@+id/treding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="11dp"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="22.5dp"
                            android:text="Visiting card Details"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="30dp"
                            android:gravity="end"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/download"
                                android:layout_width="20dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/download"
                                app:tint="@color/icon_tints" />
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="31dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/editvisitingcardlogo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/Busname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="28dp"
                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Business Name"
                            android:inputType="textPersonName"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/yourname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Your Name"
                            android:inputType="textPersonName"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/web"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Website"
                            android:inputType="textUri"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Address"
                            android:inputType="textPostalAddress"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Mobile Number"
                            android:inputType="phone"
                            android:lineHeight="21dp"
                            android:maxLength="10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">


                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:background="#D9D9D9"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="21dp"
                                android:text="Use Same as Whatsapp Number"
                                android:textColor="@color/white"
                                android:textFontWeight="400"
                                android:textSize="14sp" />


                        </LinearLayout>


                        <EditText
                            android:id="@+id/whatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Whatsapp Number "
                            android:inputType="phone"
                            android:lineHeight="21dp"
                            android:maxLength="10"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton

                            android:id="@+id/caption"


                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="37dp"

                            android:layout_marginBottom="90dp"
                            android:background="@drawable/orangebuttonhovereffect_for_all"

                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:inputType="phone"
                            android:lineHeight="24dp"
                            android:text="Add Caption on next page"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="16sp" />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>


</RelativeLayout>