<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Screens.kycVerificationScreen">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19.91dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/icon_tints" />

                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="KYC Verification"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_width="267dp"
                    android:layout_height="153dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="39dp"
                    android:src="@drawable/banklogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:lineHeight="36dp"
                    android:text="KYC Verification"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/adhar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Adharcard varification"
                    android:inputType="text"
                    android:lineHeight="21dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Pancard varification"
                    android:inputType="text"
                    android:lineHeight="21dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/check"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="15dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Cancel Check"
                    android:inputType="text"
                    android:lineHeight="21dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14dp" />


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>