<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="14dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/noti1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@drawable/low_radius_noti"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notiText"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="21dp"
                android:text="Lorem Ipsum es simplemente el texto de relleno de ? "
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/notiTime"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins_medium"
                android:lineHeight="15dp"
                android:text="35 mins"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/notiImg"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/notiicon" />


    </LinearLayout>

</RelativeLayout>