<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.subscriptionFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19.91dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/icon_tints" />

                    <TextView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="11dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="Rewards"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/notification"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"

                            android:src="@drawable/notification"
                            app:tint="@color/icon_tints" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="17dp"
                    android:layout_marginEnd="17dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:fontFamily="@font/poppins_medium"
                        android:lineHeight="22.5dp"
                        android:text="Existing Plan : Expires on 29 Nov,2022"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="15sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="486dp"

                            android:layout_marginBottom="90dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="80dp"
                            android:background="@drawable/sub"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:lineHeight="42dp"
                                android:text="GENERAL PLAN"
                                android:textColor="@color/white"
                                android:textFontWeight="600"
                                android:textSize="28sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="49dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"

                                    android:src="@drawable/bx_rupee" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5.25dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="30dp"
                                    android:text="4000"
                                    android:textColor="@color/black"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/strike"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="2dp"
                                    android:fontFamily="@font/poppins"

                                    android:lineHeight="30dp"
                                    android:text="5000"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:fontFamily="@font/poppins"

                                    android:lineHeight="19.5dp"
                                    android:text="Year"
                                    android:textColor="@color/black"
                                    android:textSize="13sp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="59dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="4dp"
                                android:background="@drawable/orangerectangle"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"

                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:src="@drawable/bx_rupee"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="5.25dp"
                                        android:layout_marginTop="3dp"
                                        android:fontFamily="@font/poppins_medium"
                                        android:gravity="center"
                                        android:lineHeight="54dp"
                                        android:text="1099"
                                        android:textColor="@color/white"
                                        android:textFontWeight="600"
                                        android:textSize="36dp"
                                        android:textStyle="bold" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"

                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="3dp"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:lineHeight="54dp"
                                        android:text="/"
                                        android:textColor="@color/white"
                                        android:textFontWeight="600"
                                        android:textSize="36dp" />

                                    <TextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="2dp"
                                        android:layout_marginTop="7dp"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="center"
                                        android:lineHeight="30dp"
                                        android:text="YEAR"
                                        android:textColor="@color/white"
                                        android:textFontWeight="600"
                                        android:textSize="20sp" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="19dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="40dp"
                                    android:src="@drawable/orangeverify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="13dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="22.5dp"
                                    android:text="All Festival images &amp; videos"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="40dp"
                                    android:src="@drawable/orangeverify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="13dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="22.5dp"
                                    android:text="Greeting images &amp; videos"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="40dp"
                                    android:src="@drawable/orangeverify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="13dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="22.5dp"
                                    android:text="Trending images "
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="40dp"
                                    android:src="@drawable/orangeverify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="13dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="22.5dp"
                                    android:text="Remove Watermark "
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:layout_marginTop="12dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="40dp"
                                    android:src="@drawable/orangeverify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="13dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:lineHeight="22.5dp"
                                    android:text="Unlimited downloads"
                                    android:textColor="@color/black"
                                    android:textFontWeight="400"
                                    android:textSize="15dp" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <androidx.appcompat.widget.AppCompatButton
                                    android:layout_width="143dp"
                                    android:layout_height="52dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/button"
                                    android:gravity="center"

                                    android:lineHeight="36dp"
                                    android:text="BUY NOW"
                                    android:textColor="@color/white"
                                    android:textFontWeight="600"
                                    android:textSize="24dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>

