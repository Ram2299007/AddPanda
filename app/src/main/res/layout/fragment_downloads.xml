<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Fragments.DownloadsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="16dp"
                        android:layout_marginTop="19.91dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/icon_tints" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="11dp"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="22.5dp"
                            android:text="Downloads"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="30dp"
                            android:gravity="end"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/download"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/notifilled"
                                app:tint="@color/icon_tints" />
                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_weight="400"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Recent"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginRight="9dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="91dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="35dp"
                            android:background="@drawable/button_rounded2_hover_for_all"
                            android:drawableStart="@drawable/foundation_photo"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:lineHeight="15dp"
                            android:padding="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="Image"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="10sp"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="91dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="18dp"
                            android:background="@drawable/button_rounded2_hover_for_all"
                            android:drawableStart="@drawable/videologo"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:lineHeight="15dp"
                            android:padding="8dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:text="Video"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="10sp"
                            tools:ignore="TouchTargetSizeCheck" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="18dp"

                            android:gravity="start"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/imageId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="156dp"
                                    android:layout_height="107dp"
                                    android:src="@drawable/downloadlogo" />


                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>

</RelativeLayout>