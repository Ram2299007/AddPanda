<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Screens.SignInActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/logoId"
                    android:layout_width="217dp"
                    android:layout_height="217dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="122dp"
                    android:src="@drawable/main_logo" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="39dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:lineHeight="18.15dp"
                    android:text="Design Social Graphics,Ads,Templates \nVideos and Many More"
                    android:textColor="@color/white"
                    android:textFontWeight="600"
                    android:textSize="15dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="8830683706"
                    android:inputType="phone"
                    android:lineHeight="21dp"
                    android:maxLength="10"
                    android:textColor="@color/white"

                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"

                    android:orientation="horizontal">

                    <View
                        android:layout_width="125dp"
                        android:layout_height="1dp"

                        android:layout_marginTop="20dp"
                        android:background="#C4C4C4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginStart="18dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="18dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:lineHeight="21dp"
                        android:text="OR"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="14dp" />

                    <View
                        android:layout_width="125dp"
                        android:layout_height="1dp"

                        android:layout_marginTop="20dp"
                        android:background="#C4C4C4" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/googleId"
                        android:layout_width="150dp"
                        android:layout_height="50dp"

                        android:background="@drawable/button_color_hover_for_all"

                        android:drawableStart="@drawable/google"
                        android:fontFamily="@font/poppins"
                        android:padding="15dp"

                        android:text="Google"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textFontWeight="500"
                        android:textSize="14dp" />


                    <FrameLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="gone" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/fb"
                            android:layout_width="150dp"
                            android:layout_height="50dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:drawableStart="@drawable/facebook"
                            android:fontFamily="@font/poppins"
                            android:padding="15dp"
                            android:text="Facebook"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="14dp" />


                    </FrameLayout>


                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_color_hover_for_all"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Reference code"
                    android:inputType="text"
                    android:lineHeight="21dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/whitetograyforbutton"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:lineHeight="18dp"
                    android:text="By continuing you agree to terms &amp; conditions"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:textSize="12dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>