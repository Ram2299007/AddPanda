<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appThemeColor"
    tools:context=".Screens.addBankScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"


            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="16dp"
                        android:layout_marginTop="19.91dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/backArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            app:tint="@color/icon_tints" />

                        <TextView
                            android:id="@+id/treding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="11dp"
                            android:fontFamily="@font/poppins_medium"
                            android:lineHeight="22.5dp"
                            android:text="Add Bank"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="15dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="30dp"
                            android:gravity="end"
                            android:orientation="horizontal">


                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Account Holder Name"
                            android:inputType="textPersonName"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Account Number"
                            android:inputType="text"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="Confirm Account Number"
                            android:inputType="text"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="14dp"

                            android:background="@drawable/button_color_hover_for_all"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:hint="IFSC Code"
                            android:inputType="text"
                            android:lineHeight="21dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/whitetograyforbutton"
                            android:textSize="14sp" />

                        <androidx.appcompat.widget.AppCompatButton

                            android:id="@+id/completekyc"
                            android:layout_width="328dp"

                            android:layout_height="50dp"

                            android:layout_gravity="center"
                            android:layout_marginTop="90dp"


                            android:background="@drawable/complete_kyc_bg"
                            android:fontFamily="@font/poppins"
                            android:gravity="center"
                            android:lineHeight="24dp"
                            android:text="Complete KYC"
                            android:textAllCaps="false"
                            android:textColor="@color/orange_text_to_white"
                            android:textFontWeight="400"
                            android:textSize="16sp"
                            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


                        <androidx.appcompat.widget.AppCompatButton

                            android:id="@+id/caption"

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="250dp"


                            android:layout_marginBottom="90dp"
                            android:background="@drawable/orangebuttonhovereffect_for_all"

                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:inputType="phone"
                            android:lineHeight="24dp"
                            android:text="Add Caption on next page"
                            android:textColor="@color/white"
                            android:textFontWeight="500"
                            android:textSize="16sp" />


                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </ScrollView>


</RelativeLayout>