<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AddPanda" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/my_drawable</item>
<!--        <item name="android:windowDisablePreview">true</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appOrangeTheme</item>
        <item name="colorPrimaryVariant">@color/appOrangeTheme</item>
        <item name="colorOnPrimary">@color/appThemeColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appOrangeTheme</item>
        <item name="colorSecondaryVariant">@color/appOrangeTheme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--     <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
     <item name="android:statusBarColor">@color/appThemeColor</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="BottomNavigationViewTextStyle">

        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">11.5sp</item>


    </style>

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">#000</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>




    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">355dp</item>
        <item name="android:background">@drawable/dialogiue_box_radius</item>
    </style>





    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>
    <style name="ActiveText">
        <item name="android:textColor">@color/bottom_navigation_item_color</item>
    </style>
    <style name="InactiveText">
        <item name="android:textColor">@color/orangeto_orange_shadow</item>
    </style>


</resources>