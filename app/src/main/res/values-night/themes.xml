<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AddPanda" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@drawable/my_drawable</item>
<!--        <item name="android:windowDisablePreview">true</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/appOrangeTheme</item>
        <item name="colorPrimaryVariant">@color/appOrangeTheme</item>
        <item name="colorOnPrimary">@color/appThemeColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/appOrangeTheme</item>
        <item name="colorSecondaryVariant">@color/appOrangeTheme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--     <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor">@color/appThemeColor</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <!-- Starting activity theme -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/my_drawable</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>